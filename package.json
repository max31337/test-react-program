{
  "name": "ip-geo-locator",
  "private": true,
  "workspaces": ["api", "web"],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:api": "npm --workspace api run dev",
    "dev:web": "npm --workspace web run dev",
    "build": "npm-run-all build:*",
    "build:api": "npm --workspace api run build",
    "build:web": "npm --workspace web run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
