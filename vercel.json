{
  "version": 2,
  "builds": [
    { "src": "web/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "web/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "web/api/$1.js" },
  { "src": "/(.*)\\.(js|css|svg|png|jpg|jpeg|gif|ico|json)", "dest": "web/dist/$1.$2" },
    { "src": "/(.*)", "dest": "web/dist/index.html" }
  ]
}